generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id            String    @unique @default(uuid())
  name          String
  phone         String    @unique
  email         String    @unique
  building      String?
  street        String
  city          String
  country       String
  zipCode       String
  logo          String
  open          String
  close         String
  turnaround    Int
  daysOperating String
  passwordHash  String
  tables        Table[]
  bookings      Booking[]
}

model User {
  id           String    @unique @default(uuid())
  firstName    String
  lastName     String
  email        String?   @unique
  phone        String    @unique
  passwordHash String
  bookings     Booking[]
}

model Booking {
  id           Int        @id @default(autoincrement())
  dateCreated  DateTime   @default(now())
  dateEdied    DateTime?
  firstName    String
  lastName     String
  email        String?
  phone        String
  covers       Int
  time         String
  day          String
  dayDate      String
  month        String
  year         String
  restaurantId String
  userId       String?
  tableId      Int?
  Restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  User         User?      @relation(fields: [userId], references: [id])
  Table        Table?     @relation(fields: [tableId], references: [id])
}

model Table {
  id           Int         @id @default(autoincrement())
  tableNr      String
  minCapacity  Int
  maxCapacity  Int
  restaurantId String?
  bookings     Booking[]
  Restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])

  @@unique([tableNr, restaurantId])
}
